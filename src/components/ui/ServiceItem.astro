---
const { number, title, description } = Astro.props;
---

<div
    class="group py-6 flex flex-col md:flex-row gap-8 transition-all duration-700 hover:pl-8 cursor-pointer relative overflow-hidden"
    data-reveal-text
>
    <div
        class=" inset-0 bg-samana-1/15 -translate-x-full group-hover:translate-x-0 transition-transform duration-700 ease-expo"
    >
    </div>

    <span class="text-samana-1 font-serif text-3xl italic relative z-10">{number}.</span>

    <div class="relative z-10 flex-1">
        <h3
            class="text-2xl md:text-3xl font-bold uppercase tracking-tighter mb-4 group-hover:text-samana-1 transition-colors"
        >
            {title}
        </h3>
        <p
            class="text-neutral-200 max-w-lg leading-relaxed group-hover:text-white transition-colors"
        >
            {description}
        </p>
    </div>

    <div
        class="hidden md:flex items-center opacity-0 group-hover:opacity-100 transition-opacity duration-500 pr-4"
    >
        <div class="w-12 h-12 rounded-full border border-samana-1 flex items-center justify-center">
            <span class="text-xl">â†—</span>
        </div>
    </div>
</div>
