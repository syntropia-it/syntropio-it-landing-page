<script>
    import gsap from 'gsap';

    function initWhatsappAnim() {
        const fab = document.getElementById('whatsapp-fab');
        if (!fab) return;

        // Animación de entrada sutil
        gsap.from(fab, {
            scale: 0,
            opacity: 0,
            duration: 1,
            delay: 2, // Aparece después de que el usuario haya visto el Hero
            ease: 'back.out(1.7)',
        });

        // Efecto de flotación continua
        gsap.to(fab, {
            y: -10,
            duration: 2,
            repeat: -1,
            yoyo: true,
            ease: 'power1.inOut',
        });
    }

    document.addEventListener('astro:page-load', initWhatsappAnim);
</script>
